<h1><%= @project.name %></h1>
<table border="1">
	<tr>
		<th><%= t('sprints') %></th>
		<% @project.sprints.each do |sprint| -%>
		<th><%= (sprint.sprint.id.nil?) ? '#' + sprint.sprint.number.to_s : link_to('#' + sprint.sprint.number.to_s, sprint.sprint) %></th>
		<% end -%>
		<th><%= t('total') %></th>
		<th><%= t('average') %></th>
	</tr>
	
	<% ProjectReport::EXPOSED_FIELDS.each do |field| -%>
	<%= render :partial => "report_field", :locals => { :field => field.to_s } %>
	<% end %>


</table>